.down-bar {
  z-index: 100;
  background-color: #FFF;
  font-size: 30rpx;
  line-height: 80rpx;
  width: 100;
}
.item-list {
  z-index: 100;
  position: absolute;
  background-color: #FFF;
  left: 0;
  right: 0;
}
.item-list .name {
  padding-left: 80rpx;
}
.item-list .category {
  height: 580rpx;
}
.active {
  color: #007aff;
}
.sticky-box {
  position: -webkit-sticky;
  position: sticky;
  top: 0px;
}
.cover {
  z-index: 99;
  position: fixed;
  left: 0;
  right: 0;
  top: 160px;
  bottom: 0;
  background-color: black;
  opacity: 0.2;
}

